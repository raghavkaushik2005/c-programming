//Printing the days of the dpecific number
//As we input 1 then it will display monday , 2 for tuesday and so on.

#include <stdio.h>

int main() {
    int i,a;
    printf("enter a day(1-6):");
    scanf("%d",&a);
    
    
    for (i = a; i == a; i++) {
        switch (i) {
            case 1:
                printf("Monday\n");
                break;
            case 2:
                printf("Tuesday\n");
                break;
            case 3:
                printf("Wednesday\n");
                break;
            case 4:
                printf("Thursday\n");
                break;
            case 5:
                printf("Friday\n");
                break;
            case 6:
                printf("Saturday");
                break;
            default:
                printf("Invalid day\n");
        }
    }
    return 0;
}
